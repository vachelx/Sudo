<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/default_text_color"
        android:paddingBottom="8dp"
        android:paddingLeft="24dp"
        android:text="难度"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/default_divider_color" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pick_difficulty"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <TextView
        android:id="@+id/start_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/StartButton"
        android:layout_marginTop="50dp"
        android:text="@string/start_game"/>

    <TextView
        android:id="@+id/resume_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/StartButton"
        android:layout_marginTop="50dp"
        android:text="@string/resume_game"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_parent"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/default_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_parent"
            app:layout_constraintRight_toRightOf="@id/bottom_parent"
            android:text="统计" />

        <View
            android:layout_width="60dp"
            android:layout_height="@dimen/px_1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toTopOf="@id/statistics"
            app:layout_constraintRight_toRightOf="@id/bottom_parent"
            android:background="@color/default_divider_color" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/level_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/StartButton"
        android:layout_marginTop="50dp"
        android:text="闯关玩法"/>

</LinearLayout>